<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_bluish">

    <LinearLayout
        android:id="@+id/HomeHeaderLL"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/CVSearchHome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:cardCornerRadius="50dp"
            android:backgroundTint="@color/black"
            android:layout_weight="3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Search Now"
                    android:textSize="16sp"
                    android:textColor="@color/sky_blue"
                    android:padding="10dp"
                    android:paddingStart="30dp"
                    android:layout_weight="3"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_search"
                    android:layout_weight="1"
                    android:padding="10dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/CVCartHome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            android:layout_weight="1"
            app:cardCornerRadius="50dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_cart"
                android:padding="6dp"/>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/CVProfileHome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            android:layout_weight="1"
            app:cardCornerRadius="50dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_profile"
                android:padding="6dp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/TabLayoutHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextColor="@color/white"
        app:tabSelectedTextColor="@color/sky_blue"
        android:background="@drawable/tab_background_selector"
        style="@style/tab_layout_text"
        app:tabIconTint="@color/tab_color"
        app:tabMode="scrollable"
        app:tabIndicator="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/HomeHeaderLL"
        android:layout_margin="10dp"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerHome"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/TabLayoutHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@color/sky_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/imageShadowSize"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@color/blue"
        app:layout_constraintTop_toTopOf="@id/imageShadowSize"
        app:layout_constraintStart_toStartOf="@id/imageShadowSize"
        app:layout_constraintEnd_toEndOf="@id/imageShadowSize"
        app:layout_constraintBottom_toBottomOf="@id/imageShadowSize"
        android:id="@+id/imageSizes"/>

    <TextView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:text="S"
        android:textColor="@color/white"
        android:gravity="center"
        android:src="@drawable/ic_picked"
        app:layout_constraintTop_toTopOf="@id/imageSizes"
        app:layout_constraintStart_toStartOf="@id/imageSizes"
        app:layout_constraintEnd_toEndOf="@id/imageSizes"
        app:layout_constraintBottom_toBottomOf="@id/imageSizes"
        android:id="@+id/imageSizesTV"/>


</androidx.constraintlayout.widget.ConstraintLayout>